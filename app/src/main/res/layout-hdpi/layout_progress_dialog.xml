<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableRow
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="73dp">
        <ProgressBar
                android:layout_marginStart="@dimen/progress_bar_width_dp_25"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                android:gravity="center|start"
                android:id="@+id/progress_textView"
                android:layout_marginStart="@dimen/dp_55"
                android:layout_marginEnd="@dimen/dp_55"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/nonEditableValues"
                android:textSize="14sp"
                android:text="@string/progress_message_processing"/>
    </TableRow>
</RelativeLayout>